<div id="page-content-wrapper">
  <div class="container-fluid">

    <%- model_class = Friend -%>
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:city) %></th>
          <th><%= model_class.human_attribute_name(:profession) %></th>
          <th><%= model_class.human_attribute_name(:inspirations) %></th>
          <th><%= model_class.human_attribute_name(:likes) %></th>
          <th><%= model_class.human_attribute_name(:accomplishments) %></th>
          <th><%= model_class.human_attribute_name(:notes) %></th>
          <th><%= model_class.human_attribute_name(:user_id) %></th>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><%= link_to friend.id, friend_path(friend) %></td>
            <td><%= friend.name %></td>
            <td><%= friend.city %></td>
            <td><%= friend.profession %></td>
            <td><%= friend.inspirations %></td>
            <td><%= friend.likes %></td>
            <td><%= friend.accomplishments %></td>
            <td><%= friend.notes %></td>
            <td><%= friend.user_id %></td>
            <td><%=l friend.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_friend_path(friend), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          friend_path(friend),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_friend_path,
                :class => 'btn btn-primary' %>
  </div>
</div>