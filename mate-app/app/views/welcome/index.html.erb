<div class="jumbotron">
	<div class="container">
		<div class="logo-container">
				<h1>Mate</h1>
				<p>Discover and Remember Your Friends</p>
				<%= form_for(:user, :url => session_path(:user)) do |f| %>
				  <p><%= f.text_field :email, placeholder: "Email" %></p>
				  <p><%= f.password_field :password, placeholder: "Password"  %></p>
				  <p><%= f.submit 'Sign in', class: "btn btn-default"%></p>
				  <p><%= link_to "Forgot your password?", new_password_path(:user) %></p>
				  <%= f.check_box :remember_me %>
				  <%= f.label :remember_me %><br>
				<% end %>
				or Sign Up
			</div>
		</div>
</div>

